<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mate"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/Tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="InvestEasy"
            android:textColor="@color/dark_green"
            android:textAppearance="@color/material_dynamic_neutral30"
            android:textStyle="bold|italic"
            android:textSize="60dp"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_investimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/silver"
            android:textSize="15dp"
            android:textStyle="bold|normal"
            android:text="O valor ao final do investimento será de:"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Tittle" />

        <TextView
            android:id="@+id/resultado_investimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:text="R$ 0.00"
            android:textSize="32dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_investimento" />

        <TextView
            android:id="@+id/title_rendimentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/silver"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="valor rendimentos: "
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultado_investimento" />

        <TextView
            android:id="@+id/resultado_rendimentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 0.00"
            android:textColor="@color/green"
            android:textSize="15dp"
            android:layout_marginTop="3dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_rendimentos" />

        <TextView
            android:id="@+id/aporte"
            android:textSize="15dp"
            android:textColor="@color/silver"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Aporte por mês:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultado_rendimentos" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/aporte_input"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aporte">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insirir valor $"
                android:background="@android:color/transparent"
                android:textColor="@color/silver"
                android:padding="0dp"
                android:textStyle="bold"
                android:inputType="number"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/meses"
            android:textSize="15dp"
            android:textColor="@color/silver"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qtde de meses:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aporte_input" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/meses_input"
            android:layout_marginStart="15dp"
            app:hintEnabled="false"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meses">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insirir qtde meses"
                android:background="@android:color/transparent"
                android:textColor="@color/silver"
                android:padding="0dp"
                android:textStyle="bold"
                android:inputType="number"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/juros"
            android:textSize="15dp"
            android:textColor="@color/silver"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juros %"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meses_input" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/juros_input"
            android:layout_marginStart="15dp"
            app:hintEnabled="false"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/juros">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insirir Juros"
                android:background="@android:color/transparent"
                android:textColor="@color/silver"
                android:padding="0dp"
                android:textStyle="bold"
                android:textSize="20sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/limpar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Limpar"
            android:background="@drawable/bg_limpar"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/calcular"
             />

        <Button
            android:id="@+id/calcular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:background="@drawable/calc_bg"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/silver"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/limpar"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>